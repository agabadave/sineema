@model IEnumerable<VideoLibrary.BusinessEntities.Models.Model.Movie>

<div class="row">
    @foreach (var modelItem in Model)
    {
        <div class="col-md-3">
            <div class="thumbnail text-center">
                <div class="text-center">
                    <i class="fa fa-4x fa-film "></i>
                </div>
                
                <div class="caption">
                    <p>@modelItem.Title</p>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = modelItem.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = modelItem.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = modelItem.Id })
                    </p>
                </div>
            </div>
        </div>
    }
</div>