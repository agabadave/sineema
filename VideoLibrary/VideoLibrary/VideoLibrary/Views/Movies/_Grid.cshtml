@model IEnumerable<VideoLibrary.Models.ViewModels.MovieListViewModel>
<div class="panel-body">
    <div class="row">
        @if (Model != null)
        {
            foreach (var modelItem in Model)
            {
            <div class="col-md-3">
                <div class="thumbnail text-center">
                    <div class="text-center">
                        <i class="fa fa-4x fa-film "></i>
                    </div>

                    <div class="caption">
                        <p>@modelItem.Title</p>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = modelItem.MovieId }) |
                            @Html.ActionLink("Details", "Details", new { id = modelItem.MovieId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = modelItem.MovieId })
                        </p>
                    </div>
                </div>
            </div>
            }
        }
    </div>
</div>