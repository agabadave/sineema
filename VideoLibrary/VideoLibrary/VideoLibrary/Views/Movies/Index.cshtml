@model IEnumerable<VideoLibrary.BusinessEntities.Models.Model.Movie>
@{
    ViewBag.Title = "Index";
}
<h2>Movie List</h2>
<div class="row">
    <div class="col-md-6">
        <p>
            <a href="@Url.RouteUrl(routeValues: new { action = "create"})" class="btn btn-default"><i class="fa fa-plus-square"></i>&nbsp;&nbsp; Add movie</a>
        </p>
    </div>
    <div class="col-md-6">
        <div class="btn-group pull-right movie-options">
            <button type="button" class="btn btn-default movie-list" data-target=".movies-list"><i class="fa fa-list"></i></button>
            <button type="button" class="btn btn-default movie-grid" data-target=".movies-grid"><i class="fa fa-th-large"></i></button>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <div>
            <div class="form-group">
                <label class="control-label" for="exampleInputEmail">Search</label>
                <input type="text" class="form-control" placeholder="Enter search text">
            </div>
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> Search</button>
        </div>
        <hr />

        <label class="control-label">Filter list</label>
        <div class="form-inline">
            <div class="form-group">
                <label class="sr-only" for="exampleInputEmail">Actor</label>
                <select class="form-control">
                    <option>Actor</option>
                </select>
            </div>
            <div class="form-group">
                <label class="sr-only" for="exampleInputEmail">Genre</label>
                <select class="form-control">
                    <option>Genre</option>
                </select>
            </div>
            <div class="form-group">
                <label class="sr-only" for="exampleInputEmail">Year</label>
                <select class="form-control">
                    <option>Year</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success"><i class="fa fa-filter"></i>&nbsp;&nbsp;Filter</button>
        </div>
    </div>
    @Html.Partial("_List", Model)
    <div class="movies-grid">
        @Html.Partial("_Grid", Model)
    </div>
    <div class="panel-footer">
        <a href="#" class="btn btn-default"><i class="fa fa-chevron-circle-left"></i>&nbsp;&nbsp;Previous</a>&nbsp;<a href="#" class="btn btn-default">Next&nbsp;&nbsp;<i class="fa fa-chevron-circle-right"></i></a>
    </div>
</div>
