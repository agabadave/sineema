@model IEnumerable<VideoLibrary.Models.ViewModels.MovieListViewModel>
@{
    ViewBag.Title = "Index";
}
<h2>Movie List</h2>
<div class="row">
    <div class="col-md-6">
        <p>
            <a href="@Url.RouteUrl(routeValues: new { action = "create"})" class="btn btn-default"><i class="fa fa-plus-square"></i>&nbsp;&nbsp; Add movie</a>
        </p>
    </div>
    <div class="col-md-6">
        <div class="btn-group pull-right movie-options">
            <button type="button" class="btn btn-default movie-list" data-target=".movies-list"><i class="fa fa-list"></i></button>
            <button type="button" class="btn btn-default movie-grid" data-target=".movies-grid"><i class="fa fa-th-large"></i></button>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <form method="get" role="form">
            <div>
                <div class="form-group">
                    <label class="control-label" for="exampleInputEmail">Search</label>
                    <input type="text" name="search" class="form-control" placeholder="Enter search text">
                </div>
                <button type="submit" name="btnAction" value="search" class="btn btn-default"><i class="fa fa-search"></i> Search</button>
            </div>
            <hr />
            <label class="control-label">Filter list</label>
            <div class="form-inline">
                <div class="form-group">
                    <label class="sr-only" for="exampleInputEmail">Actor</label>
                    <select name="actorFilter" class="form-control">
                        <option disabled selected value="">- actor -</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="sr-only" for="exampleInputEmail">Genre</label>
                    <select name="genreFilter" class="form-control">
                        <option disabled selected value="">- genre -</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="sr-only" for="exampleInputEmail">Year</label>
                    <select name="yearFilter" class="form-control">
                        <option disabled selected value="">- year -</option>
                    </select>
                </div>
                <button type="submit" name="btnAction" value="filter" class="btn btn-success"><i class="fa fa-filter"></i>&nbsp;&nbsp;Filter</button>
            </div>
        </form>
    </div>
    @Html.Partial("_List", Model)
    <div class="movies-grid">
        @Html.Partial("_Grid", Model)
    </div>
    <div class="panel-footer">
        <a href="#" class="btn btn-default"><i class="fa fa-chevron-circle-left"></i>&nbsp;&nbsp;Previous</a>&nbsp;<a href="#" class="btn btn-default">Next&nbsp;&nbsp;<i class="fa fa-chevron-circle-right"></i></a>
    </div>
</div>
