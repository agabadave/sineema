@model VideoLibrary.Models.ViewModels.MovieDetailsViewModel
@{
    ViewBag.Title = "Movie Details";
}
<h2>Movie Details</h2>
<p>
    <a href="@Url.RouteUrl(new { action = "index"})" class="btn btn-default"><i class="fa fa-chevron-circle-left"></i>&nbsp;&nbsp;Back to List</a>
    <a href="@Url.RouteUrl(new { id = Model.MovieId, action = "edit" })" class="btn btn-default"><i class="fa fa-edit"></i>&nbsp;&nbsp;Edit</a>
    <a href="@Url.RouteUrl(new { action = "addmovieactor", movieid = Model.MovieId})" class="btn btn-default"><i class="fa fa-plus-square"></i>&nbsp;&nbsp;Add movie actor</a>
    <a href="#" class="btn btn-default"><i class="fa fa-group"></i>&nbsp;&nbsp;View movie actors</a>
    <a href="@Url.RouteUrl(new { id = Model.MovieId, action = "delete" })" class="btn btn-danger"><i class="fa fa-trash-o"></i>&nbsp;&nbsp;Delete</a>
</p>
